@model Mutterboard.Models.TaskItem
@{
    ViewData["Title"] = "Aufgabe bearbeiten";
}
<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-5">
        <h2 class="text-center mb-4 text-primary-emphasis display-6 fw-semibold">✏️ Aufgabe bearbeiten</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />

            <div class="mb-4">
                <label asp-for="Title" class="form-label fw-semibold">📌 Titel</label>
                <input asp-for="Title" class="form-control form-control-lg rounded-3 shadow-sm" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-semibold">🗒️ Beschreibung</label>
                <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <label asp-for="StartDate" class="form-label fw-semibold">📅 Startdatum</label>
                    <input asp-for="StartDate" type="date" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-4">
                    <label asp-for="EndDate" class="form-label fw-semibold">📆 Enddatum</label>
                    <input asp-for="EndDate" type="date" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Priority" class="form-label fw-semibold">🚦 Priorität</label>
                <select asp-for="Priority" class="form-select shadow-sm rounded-3">
                    <option value="2" selected="@(Model.Priority == "2")">🔴 Hoch</option>
                    <option value="1" selected="@(Model.Priority == "1")">🟡 Mittel</option>
                    <option value="0" selected="@(Model.Priority == "0")">🟢 Niedrig</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger small"></span>
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-success btn-lg px-4 me-3 shadow-sm rounded-3">
                    💾 Speichern
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 shadow-sm rounded-3">
                    ❌ Abbrechen
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

